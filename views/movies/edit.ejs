<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= movie.name %></h1>

    <div style="width:30%; margin:20px auto">
      <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="movie[name]" placeholder="name" value="<%= movie.name %>">
        </div>

        <div class="form-group">
          <input class="form-control" type="text" name="movie[imageUrl]" placeholder="image url" value="<%= movie.image %>">
        </div>

        <div class="form-group">
          <textarea class="form-control" name="movie[description]" id="" cols="30" rows="10" placeholder="description"><%= movie.description %></textarea>
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Update</button>
        </div>
      </form>

      <a class="btn btn-md btn-danger" href="/movies/<%= movie._id %>">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
