<% include ../partials/header %>

  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <p class="lead text-center">Comments</p>

        <div class="well">
          <div class="text-center">
            <a class="btn btn-success" href="/movies/<%= movie._id %>/comments/new">New Comment</a>
          </div>

          <% movie.comments.forEach((comment) => { %>
            <div class="row">

              <div class="col-md-12">
                <strong>
                  <%= comment.author.username %>
                </strong>

                <p>
                  <%= comment.text %>
                </p>

                <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                  <a class="btn btn-xs btn-warning" href="/movies/<%= movie._id %>/comments/<%= comment._id %>/edit">Edit</a>

                  <form class="delete" action="/movies/<%= movie._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-xs btn-danger">Delete</button>
                  </form>
                  <% } %>
              </div>
            </div>
            <% }) %>

        </div>
        <a class="btn btn-md btn-primary" href="/movies">Go Back</a>

      </div>

      <div class="col-md-9">
        <p class="lead text-center">Movie</p>

        <div class="thumbnail">
          <img id="show" class="img-responsive" src="<%= movie.image %>" alt="<%= movie.name %> movie poster">
          <div class="caption-full">
            <h4 class="pull-right">
              Created By:
              <%= movie.author.username %>
            </h4>

            <h4>
              <a>
                <%= movie.name %>
              </a>
            </h4>

            <p>
              <%= movie.description %>
            </p>

            <% if (currentUser && movie.author.id.equals(currentUser._id)) { %>
              <a class="btn btn-md btn-warning" href="/movies/<%= movie._id %>/edit">Edit</a>

              <form class="delete" action="/movies/<%= movie._id %>?_method=DELETE" method="POST">
                <button class="btn btn-md btn-danger">Delete</button>
              </form>
              <% } %>

          </div>
        </div>


      </div>
    </div>
  </div>

  <% include ../partials/footer %>
